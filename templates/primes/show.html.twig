{% extends 'base.html.twig' %}

{% block title %}{{ prime.name }}{% endblock %}

{% block body %}
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ prime.name }}</title>
<link rel="stylesheet" href="{{ asset('css/main.css') }}">
</head>

  <h1>{{ prime.name }}</h1>

  {% for part in parts %}
    <section>
      <h2>{{ part.name }}</h2>

      {% if part.relics is empty %}
        <p>Nenhuma relic dropa esse componente.</p>
      {% else %}
        <ul>
          {% for relic in part.relics %}
            {% if relic.dropsGrouped is not empty %}
              {% set best = null %}
              {% for d in relic.dropsGrouped %}
                {% set eff = (d.efficiency|replace({'%':''})) + 0 %}
                {% if best is null or eff > ((best.efficiency|replace({'%':''})) + 0) %}
                  {% set best = d %}
                {% endif %}
              {% endfor %}

              {% set highest = best.rotations|last %}

              {% if highest == 'A' %}
                {% set pattern = 'AA' %}
              {% elseif highest == 'B' %}
                {% set pattern = 'AAB' %}
              {% else %}
                {% set pattern = 'AABC' %}
              {% endif %}

              {% set slug = relic.name|replace({' Relic':''})|lower|replace({' ':'_'}) %}

              <li>
                <a href="/relics/{{ slug }}">
                    <strong>{{ relic.name }}</strong>
                    <span class="mission-info">
                        <br>
                        {{ best.planet }} / {{ best.mission }} ({{ best.gameMode }})<br>
                        Chance no ciclo: {{ best.cycleChance }}<br>
                        Eficiência: {{ best.efficiency }}<br>
                        Parar em: {{ pattern }}
                    </span>
                </a>
              </li>
            {% else %}
              <li>
                {% set slug = relic.name|replace({' Relic':''})|lower|replace({' ':'_'}) %}
                <a href="/relics/{{ slug }}">
                    <strong>{{ relic.name }}</strong>
                    <span class="mission-info"><br>Sem drops disponíveis no momento.</span>
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
    </section>
  {% endfor %}
{% endblock %}
