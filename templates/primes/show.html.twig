<h1>
    {{ prime.name }}
</h1>

{% for part in parts %}
  <section>
    <h2>{{ part.name }}</h2>

    {% if part.relics is empty %}
      <p>Nenhuma relic dropa esse componente.</p>
    {% else %}
      <ul>
        {% for relic in part.relics %}
          {% set base_name = relic.name|replace({' Relic': ''}) %}
          {% set slug = base_name|lower|replace({' ': '_'}) %}

          <li>
            <a href="/relics/{{ slug }}">{{ relic.name }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </section>
{% endfor %}
