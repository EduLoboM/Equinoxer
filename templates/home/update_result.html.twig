{% extends 'base.html.twig' %}

{% block title %}Equinoxer - Update Result{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Custom styles removed in favor of global theme */
    </style>
{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <section>
        <div style="text-align: center; margin-bottom: 2rem;">
            <a href="{{ path('home') }}" style="color: #fffdd0; text-decoration: none; display: inline-block; font-size: 1.1rem;">
                Back to Home
            </a>
        </div>

        <div style="background: #0e0e16; padding: 1.5rem; border-radius: 10px; border: 1px solid rgba(255, 255, 255, 0.08);">
             <pre style="white-space: pre-wrap; color: #00ff99; font-family: monospace; background: #000; padding: 1rem; border-radius: 5px; border: 1px solid #333;">{{ output }}</pre>
        </div>
    </section>
{% endblock %}
